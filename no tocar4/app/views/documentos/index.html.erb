<p id="notice"><%= notice %></p>

<h1>Documentos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documentos.each do |documento| %>
      <tr>
        <td><%= documento.nombre %></td>
        <td><%= link_to 'Ver', documento, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_documento_path(documento), class:"btn btn-warning" %></td>
        <td><%= link_to 'Borrar', documento, method: :delete, data: { confirm: 'ESTA SEGURO?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Generar Documento', new_documento_path %>
