<p id="notice"><%= notice %></p>

<h1>Marcas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marcas.each do |marca| %>
      <tr>
        <td><%= marca.nombre %></td>
        <td><%= link_to 'Ver', marca,remote: true, class:"btn btn-info glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to 'Editar', edit_marca_path(marca), class:"btn btn-warning glyphicon glyphicon-pencil" %></td>
        <td><%= link_to 'Borrar', marca, method: :delete, data: { confirm: 'ESTA SEGURO?' }, class:"btn btn-danger glyphicon glyphicon-erase" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar Marca', new_marca_path %>
