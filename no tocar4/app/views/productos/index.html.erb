

<h1>Productos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Iva</th>
      <th>Marca</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.cantidad %></td>
        <td><%= producto.iva %></td>
        <td><%= producto.marca.nombre %></td>
        <td><%= link_to '', producto, remote: true, class:"btn btn-info glyphicon glyphicon-eye-open" %></td>
        <td><%= link_to '', edit_producto_path(producto), class:"btn btn-warning glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', producto, method: :delete, data: { confirm: 'ESTA SEGURO?' }, class:"btn btn-danger glyphicon glyphicon-erase" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Producto', new_producto_path, class:"btn btn-primary"%>
