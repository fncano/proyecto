<p id="notice"><%= notice %></p>

<h1>Asignaciones</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.user.email %></td>
        <td><%= assignment.role.name %></td>
        <td><%= link_to 'ver', assignment, class:"btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_assignment_path(assignment), class:"btn btn-warning" %></td>
        <td><%= link_to 'Borrar', assignment, method: :delete, data: { confirm: 'esta seguro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

