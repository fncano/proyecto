<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Ver', role, class:"btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_role_path(role),class:"btn btn-warning" %></td>
        <td><%= link_to 'Borrar', role, method: :delete, data: { confirm: 'Esta seguro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Asignar Rol', new_role_path %>
